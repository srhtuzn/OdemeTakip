<Application x:Class="OdemeTakip.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OdemeTakip.Desktop"
             xmlns:conv="clr-namespace:OdemeTakip.Desktop.Converters"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <conv:DurumYaziConverter x:Key="DurumYaziConverter"/>
        <conv:DurumRenkConverter x:Key="DurumRenkConverter"/>

        <DropShadowEffect x:Key="ShadowEffect"
                          BlurRadius="10"
                          ShadowDepth="2"  
                          Direction="270"
                          Opacity="0.3"
                          Color="Black" />
    </Application.Resources>
</Application>