<Window x:Class="OdemeTakip.Desktop.KrediKartiTaksitliOdemeForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Taksitli Kredi Kartı Harcama Ekle" Height="350" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Kart Seç:" />
            <ComboBox x:Name="cmbKart" DisplayMemberPath="CardName" SelectedValuePath="Id" Margin="0,5"/>

            <TextBlock Text="Toplam Tutar:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtToplamTutar" Margin="0,5"/>

            <TextBlock Text="Taksit Sayısı:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtTaksitSayisi" Margin="0,5"/>

            <TextBlock Text="İlk Ödeme Tarihi:" Margin="0,10,0,0"/>
            <DatePicker x:Name="dpIlkOdemeTarihi" Margin="0,5"/>

            <Button Content="Kaydet" Margin="0,20,0,0" Click="BtnKaydet_Click"/>
        </StackPanel>
    </Grid>
</Window>
