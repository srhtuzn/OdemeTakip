<UserControl x:Class="OdemeTakip.Desktop.KrediKartiControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">

    <Grid Margin="10">
        <StackPanel>
            <!-- 🔼 Butonlar üstte ve sağda hizalı -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                <Button Content="➕ Ekle" Width="80" Margin="5" Click="BtnEkle_Click"/>
                <Button Content="✏️ Güncelle" Width="90" Margin="5" Click="BtnGuncelle_Click"/>
                <Button Content="🗑️ Sil" Width="80" Margin="5" Click="BtnSil_Click"/>
            </StackPanel>

            <!-- 🧾 DataGrid -->
            <DataGrid x:Name="dgKrediKartlari" AutoGenerateColumns="False" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Kart Adı" Binding="{Binding CardName}" Width="*" />
                    <DataGridTextColumn Header="Sahip Türü" Binding="{Binding OwnerType}" Width="*" />
                    <DataGridTextColumn Header="Sahibi" Binding="{Binding OwnerName}" Width="*" />
                    <DataGridTextColumn Header="Banka" Binding="{Binding Banka}" Width="*" />
                    <DataGridTextColumn Header="Son 4 Hane" Binding="{Binding CardNumberLast4}" Width="*" />
                    <DataGridTextColumn Header="Limit" Binding="{Binding Limit}" Width="*" />
                    <DataGridTextColumn Header="Kesim Tarihi" Binding="{Binding DueDate, StringFormat=\{0:dd.MM.yyyy\}}" Width="*" />
                    <DataGridTextColumn Header="Son Ödeme" Binding="{Binding PaymentDueDate, StringFormat=\{0:dd.MM.yyyy\}}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
